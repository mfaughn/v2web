<?xml version="1.0" encoding="utf-8"?>
<DataTypeDefinition>
  <url value="http://hl7.org/v2plus/DataTypeDefinition/insurance-certification-definition"/>
  <name value="insurance certification definition"/>
  <withdrawn value="false"/>
  <abbreviation value="ICD"/>
  <description>
    <status value="additional"/>
    <div>
      <p>Definition: This data type specifies whether insurance certification is required for particular patient types, and the time window for obtaining the certification.</p>
      <p><strong>Note:</strong> Replaces the CM data type used in section 6.5.8.20 IN3-20, as of v2.5.</p>
    </div>
  </description>
  <component>
    <name value="Certification Patient Type"/>
    <sequenceNumber value="1"/>
    <definition>
      <status value="additional"/>
      <div>
        <p>Definition: Specifies the category or type of patient for which this certification is requested. Refer to <a href="file:///C:\AppData\Local\Microsoft\Windows\AppData\Local\Microsoft\Windows\Temporary%20Internet%20Files\Starting_Point_Word\V28_CH02C_CodeTables.doc#HL70150"><em>User-defined Table 0150 - Certification patient type</em></a> for suggested values.</p>
      </div>
    </definition>
    <mayTruncate value="not applicable"/>
    <dataType value="https://www.hl7.org/v2plus/DataTypeDefinition/coded-with-exceptions"/>
    <binding value="www.hl7.org/fhir/v2/0150/index.html"/>
  </component>
  <component>
    <name value="Certification Required"/>
    <sequenceNumber value="2"/>
    <definition>
      <status value="additional"/>
      <div>
        <p>Definition: Specifies whether or not a certification is required. Refer to <em><a href="file:///C:\AppData\Local\Microsoft\Windows\AppData\Local\Microsoft\Windows\Temporary%20Internet%20Files\Starting_Point_Word\V28_CH02C_CodeTables.doc#HL70136">HL7 Table 0136 - Yes/no Indicator</a></em> for valid values.</p>
      </div>
    </definition>
    <minLength value="1"/>
    <mayTruncate value="not applicable"/>
    <dataType value="https://www.hl7.org/v2plus/DataTypeDefinition/coded-value-for-hl7-defined-tables"/>
    <binding value="www.hl7.org/fhir/v2/0136/index.html"/>
  </component>
  <component>
    <name value="Date/Time Certification Required"/>
    <sequenceNumber value="3"/>
    <definition>
      <status value="additional"/>
      <div>
        <p>Definition: The date/time by which the certification must be obtained.</p>
      </div>
    </definition>
    <mayTruncate value="not applicable"/>
    <dataType value="https://www.hl7.org/v2plus/DataTypeDefinition/date-time"/>
  </component>
</DataTypeDefinition>
