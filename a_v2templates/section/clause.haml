%div{:class => "v2-composition-section-#{depth}"}  
  - if depth == 2
    %h2{:id => html_id}
      = title
  - if depth == 3
    %h3{:id => html_id}
      = title
  - if depth == 4
    %h4{:id => html_id}
      = title
  - if depth == 5
    %h5{:id => html_id}
      = title
  - if depth == 6
    %h6{:id => html_id}
      = title
  = content
  %div{:class => "v2-composition-section-#{depth}-subsections"}
    - sections.each do |section|
      = section
